{
  "coc.preferences.codeLens.enable": false,
  "coc.preferences.snippetIndicator": "~",
  "coc.preferences.diagnostic.enable": false,
  "coc.preferences.diagnostic.errorSign": "E",
  "coc.preferences.diagnostic.warningSign": "w",
  "coc.preferences.diagnostic.infoSign": "i",
  "coc.preferences.diagnostic.hintSign": "*",
  "coc.preferences.formatOnSaveFiletypes": ["elm"],
  "yank.highlight.duration": 700,
  "languageserver": {
    "ocaml": {
      "command": "ocaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "reason",
        "ocaml"
      ]
    },
    "cquery": {
      "command": "cquery",
      "args": [
        "--log-file=/tmp/cq.log"
      ],
      "filetypes": [
        "c",
        "cpp"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test"
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio"
      ],
      "trace.server": "off",
      "filetypes": [
        "purescript"
      ],
      "settings": {
        "purescript": {
          "addSpagoSources": true // etc
        }
      },
      "rootPatterns": [
        "bower.json",
        "psc-package.json",
        "spago.dhall"
      ]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": [
        "hs",
        "lhs",
        "haskell",
        "lhaskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
          "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
