{
  "coc.preferences.codeLens.enable": false,
  "coc.preferences.snippetIndicator": "~",
  "coc.preferences.diagnostic.enable": false,
  "coc.preferences.diagnostic.errorSign": "E",
  "coc.preferences.diagnostic.warningSign": "w",
  "coc.preferences.diagnostic.infoSign": "i",
  "coc.preferences.diagnostic.hintSign": "*",
  "yank.highlight.duration": 700,
  "languageserver": {
    "ocaml": {
      "command": "ocaml-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "reason",
        "ocaml"
      ]
    },
    "cquery": {
      "command": "cquery",
      "args": [
        "--log-file=/tmp/cq.log"
      ],
      "filetypes": [
        "c",
        "cpp"
      ],
      "rootPatterns": [
        "compile_flags.txt",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cacheDirectory": "/tmp/cquery"
      }
    },
    "elmLS": {
      "command": "elm-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "elm"
      ],
      "rootPatterns": [
        "elm.json"
      ],
      "initializationOptions": {
        "runtime": "node",
        "elmPath": "elm",
        "elmFormatPath": "elm-format",
        "elmTestPath": "elm-test"
      }
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "purescript": {
      "command": "purescript-language-server",
      "args": [
        "--stdio"
      ],
      "filetypes": [
        "purescript"
      ],
      "rootPatterns": [
        "bower.json",
        "psc-package.json",
        "spago.dhall"
      ]
    },
    "haskell": {
      "command": "hie-wrapper",
      "rootPatterns": [
        ".stack.yaml",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ],
      "initializationOptions": {
        "languageServerHaskell": {
          "hlintOn": true,
           "maxNumberOfProblems": 10,
          "completionSnippetsOn": true
        }
      }
    }
  }
}
